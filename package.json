{
  "name": "Tik siandien",
  "version": "1.0.0",
  "description": "A simple website project with minimized code for production.",
  "main": "dist/index.html",
  "scripts": {
    "build": "webpack --mode production",
    "copy-html": "copyfiles -f src/index.html dist/",
    "fix-html": "replace-in-file styles.css styles.min.css dist/index.html && replace-in-file main.js main.min.js dist/index.html",
    "postbuild": "npm run copy-html && npm run fix-html",
    "watch": "webpack --mode development --watch",
    "start": "webpack serve --mode development",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "babel-loader": "^8.0.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.0.0",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "gh-pages": "^6.3.0",
    "mini-css-extract-plugin": "^1.6.2",
    "replace-in-file": "^8.3.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.0.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^5.2.1"
  },
  "author": "",
  "license": "ISC"
}
